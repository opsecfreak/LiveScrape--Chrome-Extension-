{
  "manifest_version": 3,
  "name": "Customer Data Extractor",
  "version": "1.0.0",
  "description": "Scans webpages to extract customer contact information.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/scanner.js"]
    }
  ]
}
